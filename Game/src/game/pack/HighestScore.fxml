<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.pack.HighestScoreController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="850.0" prefWidth="1200.0">
            <children>
            <ImageView fitHeight="960.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../ui_images/background_main.png" />
               </image>
            </ImageView>
            <Rectangle arcHeight="5.0" arcWidth="5.0" height="368.0" layoutX="221.0" layoutY="328.0" opacity="0.18" stroke="#e5d063" strokeType="INSIDE" strokeWidth="0.0" width="759.0" />
                <Button fx:id="GoToMenuBtn" layoutX="14.0" layoutY="909.0" mnemonicParsing="false" onAction="#GoToMenu" styleClass="buttonExit" text="Back to menu" textFill="WHITE">
               <stylesheets>
                  <URL value="@main_menu.css" />
                  <URL value="@application.css" />
               </stylesheets></Button>
            <Label fx:id="scoreLabel" layoutX="500.0" layoutY="471.0" prefHeight="41.0" prefWidth="100.0" text="25" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font></Label>
            <Button fx:id="resetBtn" layoutX="263.0" layoutY="624.0" mnemonicParsing="false" onAction="#reset" text="Reset Highscore" />
            <Label fx:id="status" layoutX="353.0" layoutY="542.0" text="Label" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font></Label>
            <Label layoutX="380.0" layoutY="350.0" text="Highest score" textFill="#e7d163">
               <font>
                  <Font name="System Bold" size="69.0" />
               </font>
            </Label>
            <Label layoutX="263.0" layoutY="473.0" text="The highest score is:" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label layoutX="263.0" layoutY="542.0" text="Status:" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
